; ==============================================
; StormShield Configuration File
; Copy this to /etc/stormshield.conf or config/stormshield.conf
; and edit values as needed.
; ==============================================

[weather]
; 5-digit U.S. ZIP code to monitor
zip_code = 00000

; Optional API key for OpenWeatherMap
api_key = 

; Interval to check weather in seconds (default: 600 = 10 minutes)
check_interval = 600

[notifications]
; Webhook URL for sending alerts (Discord, Slack, Gotify, etc.)
webhook_url = https://example.com/webhook

; Time (seconds) to wait before automatically shutting down
pre_shutdown_delay = 180

[shutdown]
; Users to ignore when checking active logins
ignore_users = root, example2

; Services to skip before shutdown (if running)
skip_services = example1, example2

; LinkStation configuration (optional)
linkstation_ip = 192.168.4.200
linkstation_user = admin
linkstation_pass = password
